{
  "patterns": {
    "secret": [
      "client[_-]?secret\\s*[:=]\\s*[\"'][^\"']+[\"']",
      "private[_-]?key\\s*[:=]\\s*[\"'][^\"']+[\"']"
    ],
    "hardcoded_path": [
      "/opt/[^\"']+[\"']",
      "/var/[^\"']+[\"']"
    ],
    "config": [
      "redis[_-]?url\\s*[:=]\\s*[\"'][^\"']+[\"']",
      "cache[_-]?host\\s*[:=]\\s*[\"'][^\"']+[\"']"
    ]
  },
  "extensions": [
    ".rb",
    ".go",
    ".java",
    ".php",
    ".cs",
    ".cpp",
    ".h"
  ],
  "exclusions": [
    "vendor",
    "tmp",
    "*.min.js",
    "*.min.css",
    "coverage",
    ".next",
    ".nuxt",
    "target",
    "bin",
    "obj"
  ]
}
