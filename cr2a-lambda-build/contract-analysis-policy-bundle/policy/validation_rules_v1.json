{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "APS Validation Rules",
  "version": "1.1",
  "validation": {
    "json_schema_enforcement": true,
    "abort_on_failure": true,
    "fail_fast": true,
    "retry_on_failure": false,
    "strict_string_match_headers": true,

    "mandatory_fields": {
      "section_I_min_items": 8,
      "section_II_to_VI_closing_line": "All applicable clauses for [Item #/Title] have been identified and analyzed.",
      "overview_required": true,
      "risk_table_required": true
    },

    "section_order": ["I", "II", "III", "IV", "V", "VI"],

    "header_patterns": {
      "I": "^I\\.[\\s\\S]*$",
      "II": "^II\\.[\\s\\S]*$",
      "III": "^III\\.[\\s\\S]*$",
      "IV": "^IV\\.[\\s\\S]*$",
      "V": "^V\\.[\\s\\S]*$",
      "VI": "^VI\\.[\\s\\S]*$"
    },

    "completion_gate": {
      "require_schema_pass": true,
      "require_all_sections_present": ["I", "II", "III", "IV", "V", "VI"],
      "require_closing_lines": true,
      "disallow_empty_strings": true
    },

    "omission_check": {
      "require_final_check": true,
      "allowed_string": "No omissions or uncategorized risks identified."
    },

    "audit_logging": {
      "record_validation_steps": true,
      "record_provenance": true,
      "include_checksums": true
    }
  }
}