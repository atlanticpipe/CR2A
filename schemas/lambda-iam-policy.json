{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "StepFunctionsAccess",
      "Effect": "Allow",
      "Action": [
        "states:StartExecution",
        "states:DescribeExecution",
        "states:GetExecutionHistory"
      ],
      "Resource": [
        "arn:aws:states:us-east-1:143895994429:stateMachine:cr2a-contract-analysis",
        "arn:aws:states:us-east-1:143895994429:execution:cr2a-contract-analysis:*"
      ]
    },
    {
      "Sid": "S3Access",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::cr2a-upload/*",
        "arn:aws:s3:::cr2a-output/*"
      ]
    },
    {
      "Sid": "S3BucketAccess",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::cr2a-upload",
        "arn:aws:s3:::cr2a-output"
      ]
    },
    {
      "Sid": "DynamoDBAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Query",
        "dynamodb:Scan"
      ],
      "Resource": [
        "arn:aws:dynamodb:us-east-1:143895994429:table/cr2a-jobs",
        "arn:aws:dynamodb:us-east-1:143895994429:table/cr2a-jobs/index/*"
      ]
    },
    {
      "Sid": "LambdaInvokeAccess",
      "Effect": "Allow",
      "Action": [
        "lambda:InvokeFunction"
      ],
      "Resource": [
        "arn:aws:lambda:us-east-1:143895994429:function:cr2a-*"
      ]
    },
    {
      "Sid": "LogsAccess",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": [
        "arn:aws:logs:us-east-1:143895994429:log-group:/aws/lambda/cr2a-*:*"
      ]
    }
  ]
}